<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<Simulation>
    <Devices>
        <Device>
            <ID>Watch</ID>
            <TraceProducer>
                <TargetDevice>Smartphone</TargetDevice>
                <MaxPacketSize>1024</MaxPacketSize>
                <MaxJobDistance>60000000</MaxJobDistance>

                <Distributions>
                    <Size>
                        <Range>
                            <Upper>0.1</Upper>
                            <Lower>0.1</Lower>
                            <Probability>0.1</Probability>
                        </Range>
                        <Range>
                            <Upper>0.5</Upper>
                            <Lower>0.5</Lower>
                            <Probability>0.1</Probability>
                        </Range>
                        <Range>
                            <Upper>1</Upper>
                            <Lower>1</Lower>
                            <Probability>0.1</Probability>
                        </Range>
                    </Size>

                    <Gap>
                        <Range>
                            <Upper>0.9</Upper>
                            <Lower>0.1</Lower>
                            <Probability>0.5</Probability>
                        </Range>
                    </Gap>
                </Distributions>
            </TraceProducer>
            <!--<TraceFileReader>
                <SimulationFileName>bluetooth_in.csv</SimulationFileName>
            </TraceFileReader>-->
        </Device>
        <Device>
            <ID>Smartphone</ID>
            <!--<TraceFileReader>
                <SimulationFileName>network_out.csv</SimulationFileName>
            </TraceFileReader>-->
        </Device>
        <Device>
            <ID>Cloud</ID>
            <!--<TraceFileReader>
                <SimulationFileName>network_in.csv</SimulationFileName>
            </TraceFileReader>-->
        </Device>
    </Devices>
</Simulation>
